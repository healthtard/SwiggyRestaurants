<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="1st Block, HSR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:id="@+id/restaurant_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="0 hrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delivery_time"
        android:layout_alignBottom="@+id/deliverttime_image"
        android:layout_toRightOf="@+id/deliverttime_image"
        android:layout_toEndOf="@+id/deliverttime_image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_border_black_24dp"
        android:id="@+id/rating_image"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBottom="@+id/rating"
        android:layout_toRightOf="@+id/restaurant_name"
        android:layout_toEndOf="@+id/restaurant_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_schedule_black_24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/deliverttime_image"
        android:layout_alignBottom="@+id/restaurant_name"
        android:layout_toRightOf="@+id/rating"
        android:layout_toEndOf="@+id/rating" />

    <TextView
        android:text="3.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignBottom="@+id/deliverttime_image"
        android:layout_alignLeft="@+id/rating_image"
        android:layout_alignStart="@+id/rating_image" />
</RelativeLayout>